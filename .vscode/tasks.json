{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Alpine.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Alpine.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/AlpineNeeds/AlpineNeeds.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Database: Update",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "database",
                "update",
                "--project",
                "${workspaceFolder}/AlpineNeeds/AlpineNeeds.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Database: Add Migration",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "migrations",
                "add",
                "${input:migrationName}",
                "--project",
                "${workspaceFolder}/AlpineNeeds/AlpineNeeds.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Database: Remove Migration",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "migrations",
                "remove",
                "--project",
                "${workspaceFolder}/AlpineNeeds/AlpineNeeds.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Database: Drop",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "database",
                "drop",
                "--force",
                "--project",
                "${workspaceFolder}/AlpineNeeds/AlpineNeeds.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "migrationName",
            "description": "Name of the migration",
            "default": "NewMigration",
            "type": "promptString"
        }
    ]
}